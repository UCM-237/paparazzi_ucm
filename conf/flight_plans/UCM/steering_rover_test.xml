<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="660" ground_alt="650" lat0="40.450631" lon0="-3.726058" max_dist_from_home="1500" name="Rover Steering" security_height="0.3">
  <header>

</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="STDBY" x="-0.7" y="-0.8"/>
    <waypoint name="ELLIPSE" x="-3" y="-3"/>
    <waypoint name="TD" x="0.8" y="-1.7"/>
    <waypoint name="P1" x="-1" y="-4"/>
    <waypoint name="P2" x="-1" y="4"/>
    <waypoint name="_S1" x="3" y="4"/>
    <waypoint name="_S2" x="3" y="-4"/>
    <waypoint name="_S3" x="-3" y="-4"/>
    <waypoint name="_S4" x="-3" y="4"/>
    <waypoint name="_N1" x="4.5" y="5.2"/>
    <waypoint name="_N2" x="4.5" y="-5.2"/>
    <waypoint name="_N3" x="-4.5" y="-5.2"/>
    <waypoint name="_N4" x="-4.5" y="5.2"/>
  </waypoints>
  
  <sectors>
    <sector name="Net" color="red">
      <corner name="_N1"/>
      <corner name="_N2"/>
      <corner name="_N3"/>
      <corner name="_N4"/>
    </sector>
    
    <sector name="Survey" color="green">
      <corner name="_S1"/>
      <corner name="_S2"/>
      <corner name="_S3"/>
      <corner name="_S4"/>
    </sector>
  </sectors>
  
  <variables>
    <variable var="a" init="5.0" min="1.0" max="10.0" step="1.0"/>
    <variable var="b" init="5.0" min="1.0" max="10.0" step="1.0"/>
  </variables>
  
  <modules>
    <module name="gvf_module"/>
  </modules>
  
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>

    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call_once fun="NavSetGroundReferenceHere()"/>
    </block>
    
    <block name="Start Engine">
      <call_once fun="autopilot_set_motors_on(TRUE)"/>
      <while cond="1"/>
    </block>
    
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
    </block>
    
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    
    <block name="ellipse_wp">
      <call fun="gvf_ellipse_wp(WP_ELLIPSE, a, b, 0)"/>
    </block>
    
    <block name="line_P1_P2_turn">
      <go wp="P1" approaching_time="0"/>
    </block>
  </blocks>
</flight_plan>
